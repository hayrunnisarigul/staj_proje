@model staj_proje.Models.User

@{
    ViewBag.Title = "Kullanıcıyı Düzenle";
    Layout = "_Layout";

}

<h2>Kullanıcıyı Düzenle</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Kullanıcı Adı:</label>
        <input type="text" asp-for="Username" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Şifre:</label>
        <input type="text" asp-for="Password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-2">Güncelle</button>
</form>

