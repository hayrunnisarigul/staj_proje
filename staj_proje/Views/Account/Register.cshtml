@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - Staj Projesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .auth-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 420px;
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }
        
        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        .auth-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-align: center;
            padding: 50px 40px;
        }

        .brand-logo {
            font-size: 3.5rem;
            margin-bottom: 20px;
            opacity: 0.95;
        }

        .auth-header h2 {
            margin: 0 0 10px 0;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .auth-header p {
            margin: 0;
            opacity: 0.9;
            font-size: 1rem;
        }

        .auth-body {
            padding: 50px 40px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            color: #495057;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 18px 15px;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            font-size: 1rem;
            box-sizing: border-box;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

            input[type="text"]:focus, input[type="password"]:focus {
                border-color: #667eea;
                outline: none;
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.15);
                background-color: white;
            }

        button {
            width: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 18px 25px;
            color: white;
            font-weight: 600;
            font-size: 1rem;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            button:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            }

        .alert {
            border: none;
            border-radius: 12px;
            margin-bottom: 25px;
            padding: 15px 20px;
            font-weight: 500;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .alert-success {
            background-color: #d1eddd;
            color: #155724;
        }

        .auth-links {
            text-align: center;
            margin-top: 35px;
            padding-top: 25px;
            border-top: 1px solid #e9ecef;
        }

            .auth-links a {
                color: #667eea;
                text-decoration: none;
                font-weight: 600;
                font-size: 0.95rem;
                transition: color 0.3s ease;
            }

                .auth-links a:hover {
                    color: #764ba2;
                    text-decoration: underline;
                }

        .form-hint {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 5px;
        }

            .form-hint i {
                color: #667eea;
            }

        {
            padding: 40px 30px;
        }

        .auth-body {
            padding: 40px 30px;
        }

        .brand-logo {
            font-size: 3rem;
        }
        
    </style>
</head>
<body>
    <div class="auth-card">
        <div class="auth-header">
            <div class="brand-logo">
                <i class="fas fa-user-plus"></i>
            </div>
            <h2>Kayıt Olun</h2>
            <p>Yeni hesap oluşturun</p>
        </div>

        <div class="auth-body">
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.Hata
                </div>
            }

            @if (TempData["Mesaj"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Mesaj"]
                </div>
            }

            <form method="post" asp-action="Register">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="kullaniciAdi">
                        <i class="fas fa-user me-2"></i>Kullanıcı Adı
                    </label>
                    <input type="text" id="kullaniciAdi" name="kullaniciAdi" required
                           minlength="3" maxlength="20" placeholder="Kullanıcı adınızı girin" />
                    <div class="form-hint">
                        <i class="fas fa-info-circle me-1"></i>3-20 karakter arası olmalıdır
                    </div>
                </div>

                <div class="form-group">
                    <label for="sifre">
                        <i class="fas fa-lock me-2"></i>Şifre
                    </label>
                    <input type="password" id="sifre" name="sifre" required
                           minlength="4" placeholder="Şifrenizi girin" />
                    <div class="form-hint">
                        <i class="fas fa-info-circle me-1"></i>En az 4 karakter olmalıdır
                    </div>
                </div>

                <button type="submit">
                    <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                </button>
            </form>

            <div class="auth-links">
                <a href="@Url.Action("Login", "Account")">
                    <i class="fas fa-sign-in-alt me-2"></i>Zaten hesabınız var mı? Giriş yapın
                </a>
            </div>
        </div>
    </div>
</body>
</html>