@{
    Layout = "_Layout";
    ViewBag.Title = "Ana Sayfa";
}

<div class="container mt-4">
    <!-- Hoşgeldin Mesajı -->
    <div class="jumbotron bg-primary text-white rounded p-5 mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4">
                    <i class="fas fa-home"></i> Hoş geldiniz!
                </h1>
                <p class="lead mb-3">
                    Merhaba <strong>@Context.Session.GetString("Username")</strong>,
                    sisteme başarıyla giriş yaptınız.
                </p>
                <p class="mb-0">
                    Sol üst köşedeki menü butonuna tıklayarak diğer sayfalara geçiş yapabilirsiniz.
                </p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-user-circle fa-5x opacity-75"></i>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim Kartları -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Profilim</h5>
                    <p class="card-text">Kullanıcı adınızı ve şifrenizi güncelleyebilirsiniz.</p>
                    <a href="@Url.Action("Profile", "Home")" class="btn btn-info">
                        <i class="fas fa-edit"></i> Profile Git
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Tüm Kayıtlar</h5>
                    <p class="card-text">Sistemdeki tüm kullanıcıları görüntüleyip yönetebilirsiniz.</p>
                    <a href="@Url.Action("AllUsers", "Home")" class="btn btn-success">
                        <i class="fas fa-list"></i> Kayıtları Gör
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-cog fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Sistem Bilgileri</h5>
                    <p class="card-text">Toplam kullanıcı sayısı ve sistem durumu.</p>
                    <div class="mt-3">
                        <span class="badge bg-primary fs-6">
                            Aktif Kullanıcı: @Context.Session.GetString("Username")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sistem İstatistikleri -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Sistem Durumu
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3">
                                <h3 class="text-primary mb-0">
                                    <i class="fas fa-server"></i>
                                </h3>
                                <p class="mb-0 small text-muted">Sistem Aktif</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <h3 class="text-success mb-0">
                                    <i class="fas fa-check-circle"></i>
                                </h3>
                                <p class="mb-0 small text-muted">Bağlantı Başarılı</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <h3 class="text-info mb-0">
                                    <i class="fas fa-clock"></i>
                                </h3>
                                <p class="mb-0 small text-muted">
                                    @DateTime.Now.ToString("HH:mm")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <h3 class="text-warning mb-0">
                                    <i class="fas fa-calendar"></i>
                                </h3>
                                <p class="mb-0 small text-muted">
                                    @DateTime.Now.ToString("dd.MM.yyyy")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>